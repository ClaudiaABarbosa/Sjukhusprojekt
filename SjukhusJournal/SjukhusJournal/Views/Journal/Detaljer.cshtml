<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/journal.css"> <!-- CSS -->
</head>
<div class="container">
    <div class="journal-box">
        <h3 class="text-center fw-bold">Visa patientjournaler</h3>
        <hr />
        <div class="mb-3">
            <label for="patientIdSearch" class="form-label">Personnummer</label>
            <input type="text" class="form-control" id="patientIdSearch" placeholder="YYYYMMDD-XXXX" />
            <button id="searchJournal" class="btn btn-primary w-100 mt-3">Sök</button>
        </div>
        <h3 class="text-center fw-bold">Journalanteckningar</h3>
        <hr />
        <div id="journalEntries" class="journal-entries"></div>
        <br />
        <a asp-action="Index" asp-controller="Menu" class="btn btn-primary w-100 cancelbtn">Tillbaka</a>
    </div>
</div>
@section Scripts {
    <script src="~/js/journal.js"></script>
}