<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/journal.css"> <!-- CSS -->
</head>
<div class="container">
    <div class="journal-box">
        <h3 class="text-center fw-bold">Patientinformation</h3>
        <hr />

        <form>
            <div class="mb-3">
                <label for="patientName" class="form-label">Patientens namn</label>
                <input type="text" class="form-control" id="patientName" placeholder="Ange patientens namn" />
            </div>

            <div class="mb-3">
                <label for="patientId" class="form-label">Personnummer</label>
                <input type="text" class="form-control" id="patientId" placeholder="YYYYMMDD-XXXX" />
            </div>

            <div class="mb-3">
                <label for="department" class="form-label">Avdelning/Mottagning</label>
                <input type="text" class="form-control" id="department" placeholder="Ange avdelning/mottagning" />
            </div>

            <div class="mb-3">
                <label for="doctor" class="form-label">Ansvarig läkare</label>
                <input type="text" class="form-control" id="doctor" placeholder="Förinställt genom inlogg" />
            </div>

            <div class="mb-3">
                <label for="timeAndDate" class="form-label">Datum och tid: (automatiskt inställt)</label>
            </div>

            <h3 class="text-center fw-bold">Journalanteckning</h3>
            <hr />

            <div class="mb-3">
                <label for="reasonForVisit" class="form-label">Besöksorsak</label>
                <textarea class="form-control" id="reasonForVisit" placeholder="Beskriv besöksorsak" rows="4"></textarea>
            </div>

            <div class="mb-3">
                <label for="parameterValues" class="form-label">Parametervärden</label>
                <textarea class="form-control" id="parametervalues" placeholder="Ange eventuella parametervärden" rows="4"></textarea>

            </div>

            <div class="mb-3">
                <label for="diagnosis" class="form-label">Diagnos</label>
                <input type="text" class="form-control" id="diagnosis" placeholder="Ange diagnos" />
            </div>

            <div class="mb-3">
                <label for="treatment" class="form-label">Åtgärder/Behandling</label>
                <textarea class="form-control" id="treatment" placeholder="Ange åtgärder/behandling" rows="4"></textarea>
            </div>

            <div class="mb-3">
                <label for="comment" class="form-label">Eventuella kommentarer</label>
                <textarea class="form-control" id="comment" placeholder="Ange kommentar" rows="4"></textarea>

            </div>
            <button type="submit" class="btn btn-primary w-100">Spara journalanteckning</button>
        </form>
        <br />
        <a asp-action="Index" asp-controller="Menu" class="btn btn-primary w-100 cancelbtn">Avbryt</a>
    </div>
</div>
<!-- section Scripts – Lägger till JavaScript bara på den specifika sidan, istället för att köra den på alla sidor genom -->
@section Scripts {
<script src="~/js/site.js"></script>
}