@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> 
    <link href="~/css/index.css" rel="stylesheet" />
</head>

    <div class="login-container">
        <div class="login-box">
            <h2 class="text-center fw-bold">Sjukhusnamn</h2>
            <h3 class="text-center fw-bold">Journalportal</h3>
            <hr />
            <form action="/Menu" method="get">
                <div class="mb-3">
                    <label for="username" class="form-label">Användarnamn</label>
                    <input type="text" class="form-control" id="username" placeholder="Ange användarnamn" />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Lösenord</label>
                    <input type="password" class="form-control" id="password" placeholder="Ange lösenord" />
                </div>
                <button type="submit" class="btn btn-primary w-100>">Logga in</button>
            </form>
        </div>
    </div>